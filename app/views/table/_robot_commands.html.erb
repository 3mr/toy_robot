<div class="mb-3">
  <%= form_tag brain_think_path, remote: true do %>
    <h4 class="alert-heading">
      Moves
    </h4>
    <div class="input-group mb-3">
      <%= text_area_tag :moves, nil, class: 'moves-textarea' %>
    </div>

    <div class="input-group mb-3">
      <%= submit_tag "Apply moves", class: 'btn btn-primary chat-input' %>
    </div>
  <% end %>
</div>
